<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kingston.im.data.dao.SearchDao">

	<resultMap id="userView" type="com.kingston.im.data.view.FriendView">
	</resultMap>

	<select id="queryByName" parameterType="java.lang.String"
		resultMap="userView">
	SELECT u.userId, u.sex, u.userName, u.signature
		FROM
		user u
		WHERE u.userName LIKE concat(concat('%',#{userName}),'%')
	</select>
</mapper>